@model List<DataAccess.Data.Entities.Product>;

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    
    @* Razor Syntax: @if, @for, @{} ... *@
    @* <img width="400" src="https://d1m75rqqgidzqn.cloudfront.net/wp-data/2022/06/23011227/iStock-1285888054.jpg" alt="MVC" /> *@
    
    @* <div>
        @for(int i = 0; i < 10; ++i)
        {
            <img width="70" src="~/images/picture.png" alt="Image" />
        }
    </div> *@

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var i in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img height="250" src="@i.ImageUrl" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <h5 class="card-title">@i.Name</h5>
                        <p class="card-text">Category @i.Price$</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@i.Id" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
