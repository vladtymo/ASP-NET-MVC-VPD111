<h1>Create New Product</h1>

<form class="row g-3">
    <div class="col-md-8">
        <label for="inputEmail4" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputEmail4" placeholder="Enter name">
    </div>
    <div class="col-md-4">
        <label for="inputPassword4" class="form-label">Price</label>
        <input type="number" class="form-control" id="inputPassword4" placeholder="Enter price">
    </div>
    <div class="col-12">
        <label for="inputAddress" class="form-label">Discount</label>
        <input type="number" class="form-control" id="inputAddress" placeholder="Enter discount">
    </div>
    <div class="col-12 mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter description"></textarea>
    </div>

    <div class="col-md-6">
        <label for="inputPassword4" class="form-label">Category ID</label>
        <input type="number" class="form-control" id="inputPassword4" placeholder="Enter category ID">
    </div>

