@model AspNet_MVC_VPD111.Data.Entities.Product;

<h1>Update Product Information</h1>

<form asp-action="Edit" method="post" class="row g-3">
    <div class="col-md-8">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
    </div>
    <div class="col-md-4">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Enter price">
    </div>
    <div class="col-12">
        <label asp-for="Discount" class="form-label">Discount</label>
        <input asp-for="Discount" type="number" class="form-control" placeholder="Enter discount">
    </div>
    <div class="col-12 mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description"></textarea>
    </div>

    <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label">Category ID</label>
        <input asp-for="CategoryId" type="number" class="form-control" placeholder="Enter category ID">
    </div>

    @*  <div class="col-md-4">
    <label for="inputState" class="form-label">State</label>
    <select id="inputState" class="form-select">
    <option selected>Choose...</option>
    <option>...</option>
    </select>
    </div> *@

    <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" type="url" class="form-control" placeholder="Enter image URL">
    </div>
    <div class="col-12">
        <div class="form-check">
            <input asp-for="InStock" class="form-check-input" type="checkbox">
            <label asp-for="InStock" class="form-check-label">
                In Stock
            </label>
        </div>
    </div>
    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-success w-100">Edit</button>
    </div>
</form>